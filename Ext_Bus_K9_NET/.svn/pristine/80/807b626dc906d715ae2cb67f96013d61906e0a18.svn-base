function $(id){ return document.getElementById(id)}
function autoHeight(){
	var bodyHeight = $("warp").offsetHeight;
	var headHeight = $("header").offsetHeight;
	var navHeight = $("nav").offsetHeight;
	var bottomHeight = bodyHeight - headHeight - navHeight;
	if(bottomHeight>0){
		$("bottom").style.height = bottomHeight + "px";
		$("zdims").style.height = bottomHeight + "px";
	}
}

function autowidth(){
	var bodywidth = $("warp").offsetwidth;
	var h = $("warp").offsetWidth;
	var t = $("tool").offsetWidth;
	$("tool").style.left = Math.ceil((h-t)/2) + "px";
}
function hiddenContent(){
	if($("min_max").className == "jian"){
		$("left_body_bg").style.display = "none";
		$("min_max").className = "jia";
	}else{
		$("left_body_bg").style.display = "block";
		$("min_max").className = "jian";
	}
}

