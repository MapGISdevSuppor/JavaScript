function toBig(e){
	if(!e) e = window.event;
	var obj = (e.srcElement) ? e.srcElement : e.target;
	obj.style.width = "37px";
	obj.style.height = "37px";
}
function toSmall(e){
	if(!e) e = window.event;
	var obj = (e.srcElement) ? e.srcElement : e.target;
	obj.style.width = "32px";
	obj.style.height = "32px";
}


